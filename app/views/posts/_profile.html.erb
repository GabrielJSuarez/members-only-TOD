<div class="card border-dark text-white bg-danger mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= gravatar_image_tag(current_user.email.gsub('spam', 'mdeering'), :alt => current_user.name, class: 'rounded-circle ml-3 mt-3')  %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title text-dark">
          <%= current_user.name %> Last Post!
        </h4>
        <h6 class="card-text pt-2">
          <% if current_user.posts.any? %>
            <%= current_user.posts.last.content %>
          <% else %>
            <%= 'Nothing to show' %>
          <% end %>
        </h6>
        <p class="card-text">
          <small class="text-light">
            <% if current_user.posts.any? %>
              <%= time_ago_in_words(current_user.posts.last.created_at) %> ago
            <% else %>
              <%= 'Nothing created' %>
            <% end %>
          </small>
        </p>
      </div>
    </div>
  </div>
</div>